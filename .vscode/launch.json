    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.js",
            "args": [
                "-n", "./examples/nodes.csv",
                "-e", "./examples/edges.csv",
                "-m", "./examples/map.csv",
                "-s", "style-latex.json",
                "-g", "1",
                "--trace-warnings"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Diagram",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.js",
            "args": [
                "-y", "./examples/mixed.yaml ",
                "-m", "./examples/map.csv",
                "-o", "output/mixed-yaml",
                "--trace-warnings"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run All Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Position Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "tests/io/models/node.calculatePositionAndScale.test.js",
                "tests/io/models/node.positionRef.test.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Relative Positioning Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "tests/integration/relative-positioning.test.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Creation/Property Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "tests/io/models/node.test.js",
                "tests/unit/io/node-reader.test.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Rendering Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "tests/unit/renderers"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Edge Connection Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "tests/unit/io/edge-reader.test.js",
                "tests/unit/geometry/node-connection-point.test.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Integration Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=30000",
                "--verbose",
                "tests/integration"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Single Test File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Error Case",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.js",
            "args": [
                "-y", "./examples/error/mixed.yaml",
                "-m", "./examples/error/map.csv",
                "-o", "./examples/error/error",
                "--trace-warnings"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Size Test",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--testTimeout=10000",
                "--verbose",
                "tests/unit/io/models/node.test.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}